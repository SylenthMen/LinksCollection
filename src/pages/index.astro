---
import Avatar from "../components/Avatar.astro";
import Grids from "../components/Grids.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="sylenthmen | Redes sociales" />
    <meta
      property="og:description"
      content="galeria de links para facil acceso, aqui podras encontrar todos mis links de mis distintas redes sociales, facebook, instagram, x, twitter, twitch, etc"
    />
    <meta property="og:image" content="/favicon.png" />
    <meta property="og:url" content="https://links.sylenthmen.site" />
    <meta
      name="description"
      content="galeria de links para facil acceso, aqui podras encontrar todos mis links de mis distintas redes sociales, facebook, instagram, x, twitter, twitch, etc"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="sylenthmen | Redes sociales" />
    <meta
      name="twitter:description"
      content="galeria de links para facil acceso, aqui podras encontrar todos mis links de mis distintas redes sociales, facebook, instagram, x, twitter, twitch, etc"
    />
    <meta name="twitter:image" content="/favicon.png" />

    <title>sylenthmen | Redes Sociales</title>
  </head>
  <body class="bg-[#f4f3f3] text-black dark:bg-[#111] dark:text-white">
    <div
      class="absolute inset-0 -z-10 h-screen w-full bg-white dark:bg-[#111] bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]"
    >
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_600px_at_50%_200px,#900C3F,transparent)]"
      >
      </div>
    </div>
    <Avatar />
    <h1 class="text-3xl text-center font-bold capitalize">@sylenthmen</h1>
    <Grids />
    <Footer />
  </body>
</html>
