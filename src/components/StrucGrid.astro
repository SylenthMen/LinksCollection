---
const { img } = Astro.props;
const { titu } = Astro.props;
const { enlace } = Astro.props;
const { color } = Astro.props;
---

<div
  class="bg-white dark:bg-[#111]/30 backdrop-blur-lg dark:text-white rounded-lg shadow-xl overflow-hidden items-center escale-100 hover:scale-105 hover:animate-pop hover:shadow-2xl cursor-pointer transition-all capitalize dark:border dark:border-white"
>
  <img
    src={img}
    alt=`tarjeta de la red social ${titu}`
    class="w-24 flex flex-col justify-center items-center m-auto mt-4 hover:drop-shadow-lg transition-all"
  />
  <div class="p-6 m-auto text-center">
    <h3 class="text-2xl font-semibold mb-2">{titu}</h3>
    <a
      target="_blank"
      href={enlace}
      class=`${color} inline-block text-white px-6 py-3 rounded-lg transition-all`
      >Ver m√°s</a
    >
  </div>
</div>
